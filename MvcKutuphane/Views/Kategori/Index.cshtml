@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>
<hr />
<a href="~/Kategori/KategoriEkle/" class="btn btn-dark">Yeni Kategori</a>
<br />
<br />
<a href="~/Kategori/Pasif/" class="btn btn-danger btn-sm">Pasif Kategoriler</a>
<br />
<br />
<table class="table table-striped table-bordered responsive" oncopy='return false' oncut='return false' id="tblKategori">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th class="not-export-col">Güncelle</th>
            <th class="not-export-col">Pasif</th>
            <th class="not-export-col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
        <tr>
            <td>@kategori.ID</td>
            <td>@kategori.AD</td>
            <td><a href="/Kategori/KategoriGetir/@kategori.ID" class="btn btn-secondary">Güncelle</a></td>
            <td><a class="btn btn-danger btnSil" data-id="@kategori.ID" data-url="/Kategori/KategoriSil/">Pasifleştir</a></td>
            <td><a href="/Kategori/KaliciSil/@kategori.ID" class="btn btn-danger" onclick="return confirm('Kalıcı olarak silmek istiyor musunuz?')">Sil</a></td>
        </tr>
        }
    </tbody>
</table>