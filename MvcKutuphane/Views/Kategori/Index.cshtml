@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2> @*Başlıklara css*@
<hr />
<a href="~/Kategori/KategoriEkle/" class="btn btn-dark">Yeni Kategori</a>
<br />
<br />
<br />
<table class="table table-striped table-bordered responsive" oncopy='return false' oncut='return false'>
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th class="not-export-col">Güncelle</th>
            <th class="not-export-col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
        <tr>
            <td>@kategori.ID</td>
            <td>@kategori.AD</td>
            <td><a href="/Kategori/KategoriGetir/@kategori.ID" class="btn btn-secondary">Güncelle</a></td>
            @*<td><a href="/Kategori/KategoriSil/@kategori.ID" class="btn btn-danger btnAlertMessage">Sil</a></td>*@
            <td>
               <a href="#Sil_@kategori.ID" data-toggle="modal" class="btn btn-danger">Sil</a>

                    <div class="modal fade" id="Sil_@kategori.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Kayıt Sil</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <h4>Kaydı silmek istiyor musunuz?</h4>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary mx-4" data-dismiss="modal">Vazgeç</button>
                                    <a href="/Kategori/KategoriSil/@kategori.ID" class="btn btn-danger btnAlertMessage">Sil</a>
                                </div>
                            </div>
                        </div>
                    </div>
            </td>
           
        </tr>
        }
    </tbody>


   
</table>

