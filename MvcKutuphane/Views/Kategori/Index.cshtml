@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2> @*Başlıklara css*@
<hr />
<a href="~/Kategori/KategoriEkle/" class="btn btn-dark">Yeni Kategori</a>
<br />
<br />
<br />
<table class="table table-striped table-bordered responsive">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th class="not-export-col">Güncelle</th>
            <th class="not-export-col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <td>@kategori.ID</td>
                <td>@kategori.AD</td>
                <td><a href="/Kategori/KategoriGetir/@kategori.ID" class="btn btn-secondary">Güncelle</a></td>
                <td><a href="/Kategori/KategoriSil/@kategori.ID" class="btn btn-danger btnAlertMessage">Sil</a></td>

            </tr>
        }
    </tbody>
</table>

