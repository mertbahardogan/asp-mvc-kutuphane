<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Hoşgeldiniz | MVC5 Kütüphane</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Themes/UyeLogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Themes/UyeLogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

    <style>
        .login-a {
            margin: 85px;
            color: darkseagreen;
            font-size: medium;
        }
    </style>

</head>


<body>
    <h1>MVC Kütüphane Sistemi</h1>
    <div class=" w3l-login-form">
        <h2>Hoşgeldiniz</h2>
        <hr />
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" required="required" name="MAIL" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Parola:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Parola" required="required" name="SIFRE" />
                </div>
            </div>
            <div class="forgot">
                <a href="/Login/SifremiUnuttum/">Parolamı unuttum</a>
                <p><input type="checkbox" name="BeniHatirla">Beni Hatırla</p>
            </div>
            <button type="submit">Giriş Yap</button>
        }
        <p class=" w3l-register-p">Hesabın yok mu?<a href="/Kayit/YeniKayit/" class="register"> Kayıt Ol</a></p>
        <hr />
        <a class="login-a">@TempData["Kontrol"]</a>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; @DateTime.Now.Year All Rights Reserved | Design by <a href="http://mertbahardogan.com">Mert Bahardoğan</a></p>
    </footer>

</body>

</html>