@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Kitaplar</h2>
<hr />
@Html.ActionLink("Yeni Kitap", "KitapEkle", null, new { @class = "btn btn-dark" })
<br />
<br />
<br />

<table class="table table-striped table-bordered responsive"> 
    <thead>
        <tr>
            <th>ID</th>
            <th>Kitap Adı</th>
            <th>Kitap Yazarı</th>
            <th>Kategori</th>
            <th>Basım Yılı</th>
            <th>Yayın Evi</th>
            <th>Sayfa Sayısı</th>
            <th>Durum</th>
            <th class="not-export-col">Güncelle</th>
            <th class="not-export-col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitap in Model)
        {
            <tr>
                <td>@kitap.ID</td>
                <td>@kitap.AD</td>
                <td>@kitap.TBLYAZAR.AD&nbsp;@kitap.TBLYAZAR.SOYAD</td>
                <td>@kitap.TBLKATEGORI.AD</td>
                <td>@kitap.BASIMYIL</td>
                <td>@kitap.YAYINEVI</td>
                <td>@kitap.SAYFA</td>
                <td>@kitap.DURUM</td>
                <td><a href="/Kitap/KitapGetir/@kitap.ID" class="btn btn-secondary">Güncelle</a></td>
                <td><a href="/Kitap/KitapSil/@kitap.ID" class="btn btn-danger" onclick="return confirm('Silmek istiyor musunuz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<script>
    var settings = table.fnSettings();
    settings.bResponsive = true;
    table.destroy();
    $(".table").DataTable(settings);
</script>