@using MvcKutuphane.Models.Entity
@model List<TBLDUYURU>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}
<br />
<h3>DUYURULAR</h3>
<a class="btn btn-outline-dark btn-sm" href="/Panel/DuyuruOkunmus/">Okunan Duyurular</a>
<br />
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Kategori</th>
            <th>İçerik</th>
            <th>Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var duyuru in Model)
        {
            <tr>
                <td>@duyuru.KATEGORI</td>
                <td>@duyuru.ICERIK</td>
                <td>@Convert.ToDateTime(duyuru.TARIH).ToString("dd/MMM/yyyy")</td>
                <td><a class="btn btn-danger" href="/Panel/DuyuruOkundu/@duyuru.ID">Okundu</a></td>
            </tr>
        }
    </tbody>
</table>



