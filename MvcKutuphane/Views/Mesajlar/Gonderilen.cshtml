@using MvcKutuphane.Models.Entity
@model List<TBLMESAJLAR>
@{
    ViewBag.Title = "Gönderilen Mesajlar";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<h2>Gönderilen Mesajlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Alıcı</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.ALICI</td>
            <td>@m.KONU</td>
            <td>@m.ICERIK</td>
            <td>@m.TARIH</td>
        </tr>
    }
</table>

