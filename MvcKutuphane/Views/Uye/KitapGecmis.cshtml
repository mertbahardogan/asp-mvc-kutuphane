@using MvcKutuphane.Models.Entity;
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitap Geçmişi";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<a href="~/Uye/Index/" class="btn btn-sm btn-dark">Geri</a>
<br />
<h3 style="text-align:center;">@ViewBag.uAd Kitap Geçmişi</h3>
<br />
<img class="img-fluid" style="margin-bottom: 30px;" src="@Model.Select(k=>k.TBLUYELER.FOTOGRAF).FirstOrDefault()" alt="" />
<table class="table table-striped">
    <tr>
        <th>Kitap Adı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TBLKITAP.AD</td>
            <td>@x.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.GETIRILENTARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

