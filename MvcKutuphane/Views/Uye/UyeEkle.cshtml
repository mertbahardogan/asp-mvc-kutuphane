@model MvcKutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form class="form-group was-validated" method="post">
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.AD)
            @Html.TextBoxFor(m => m.AD, new { @class = "form-control", placeholder = "Üye Adı", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SOYAD)
            @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control", placeholder = "Üye Soyadı", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MAIL)
            @Html.TextBoxFor(m => m.MAIL, new { @class = "form-control", placeholder = "Üye Mail Adresi", @required = "required" })
            @Html.ValidationMessageFor(m => m.MAIL)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.KADI)
            @Html.TextBoxFor(m => m.KADI, new { @class = "form-control", placeholder = "Üye Kullanıcı Adı", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SIFRE)
            @Html.TextBoxFor(m => m.SIFRE, new { @class = "form-control", placeholder = "Üye Şifresi", @required = "required", @type = "password" })
            @Html.ValidationMessageFor(m => m.SIFRE)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SIFREONAY)
            @Html.TextBoxFor(m => m.SIFREONAY, new { @class = "form-control", placeholder = "Üye Şifresi", @required = "required", @type = "password" })
            @Html.ValidationMessageFor(m => m.SIFREONAY)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FOTOGRAF)
            @Html.TextBoxFor(m => m.FOTOGRAF, new { @class = "form-control", placeholder = "Üye Fotoğraf Linki", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TELEFON)
            @Html.TextBoxFor(m => m.TELEFON, new { @class = "form-control", placeholder = "Üye Telefon Numarası", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OKUL)
            @Html.DropDownListFor(m => m.OKUL, (IEnumerable
    <SelectListItem>)ViewBag.uyeAdminOkul, new { @class = "form-control", @required = "required" })
        </div>
        <div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>
<div>
</div>
@section myscript{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


