@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
<hr />
<a href="~/Yazar/YazarEkle/" class="btn btn-dark">Yeni Yazar</a>
<br />
<br />
<br />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>DETAY</th>
            <th class="not-export-col">GÜNCELLE</th>
            <th class="not-export-col">SİL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yazar in Model)
        {

            <tr>
                <td>@yazar.ID</td>
                <td>@yazar.AD</td>
                <td>@yazar.SOYAD</td>
                <td>@yazar.DETAY</td>
                <td><a href="/Yazar/YazarGetir/@yazar.ID" class="btn btn-secondary">Güncelle</a></td>
                <td><a href="/Yazar/YazarSil/@yazar.ID" class="btn btn-danger" onclick="return confirm('Silmek istiyor musunuz?')">Sil</a></td>
            </tr>

        }
    </tbody>
</table>


