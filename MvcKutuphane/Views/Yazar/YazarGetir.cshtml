@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post, new { @class = "was-validated"}))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(y => y.AD)
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control", placeholder = "Yazar Adı", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.SOYAD)
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control", placeholder = "Yazar Soyadı", @required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y => y.DETAY)
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control", placeholder = "Yazar Detay", @required = "required" })
    </div>
    <div>
        <button type="submit" class="btn btn-success">Güncelle</button>
    </div>
    @Html.HiddenFor(y => y.ID) 
}
