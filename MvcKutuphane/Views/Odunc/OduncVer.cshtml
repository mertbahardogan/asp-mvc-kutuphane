@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Emanet Kitap";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form class="form-group was-validated" method="post">
    <div>
        <div class="form-group">
            <label>Üye Seçiniz</label>
            @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control", @required = "required" })*@
            @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.UYE
           , new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            <label>Kitap Seçiniz</label>
            @Html.DropDownListFor(k => k.TBLKITAP.ID, (List<SelectListItem>)ViewBag.KITAP
           , new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            <label>Personel Seçiniz</label>
            @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.PERSONEL
           , new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.ALISTARIH)
            <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" readonly />
        </div>
        <div class="form-group">
            @Html.LabelFor(k => k.IADETARIH)
            <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" readonly />
        </div>
        <button type="submit" class="btn btn-group" style="background-color:chocolate; color:white">Kitabı Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>
</form>

