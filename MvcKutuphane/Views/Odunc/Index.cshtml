@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Ödünç Kitap Listesi</h2>
<hr />
<br />
<br />
<br />

    <table class="table table-striped table-bordered"id="tblKitap" >
    <thead>
        <tr>
            <th>İşlem ID</th>
            <th>Kitap Adı</th>
            <th>Üye</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>İade Tarihi</th>
            <th class="not-export-col">İade Al</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.ID</td>
                <td>@k.TBLKITAP.AD</td>
                <td>@k.TBLUYELER.AD&nbsp;@k.TBLUYELER.SOYAD</td>
                <td>@k.TBLPERSONEL.PERSONEL</td>
                <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MMM/yyyy")</td>
                <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MMM/yyyy")</td>
                <td><a href="/Odunc/OduncIade/@k.ID" class="btn btn-info">Kitabı İade Al</a></td>
            </tr>
        }
    </tbody>
</table>


