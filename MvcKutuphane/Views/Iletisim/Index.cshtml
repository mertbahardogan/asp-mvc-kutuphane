@using MvcKutuphane.Models.Entity
@model List<TBLILETISIM>
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Gelen Mesajlar</h2>
<hr />
<br />
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad - Soyad</th>
            <th>Mail Adresi</th>
            <th>Mesajın Konusu</th>
            <th>Mesaj</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var iletisim in Model)
        {
        <tr>
            <td>@iletisim.ID</td>
            <td>@iletisim.AD</td>
            <td>@iletisim.MAIL</td>
            <td>@iletisim.KONU</td>
            <td>@iletisim.MESAJ</td>
            <td><a class="btn btn-danger btnSil" data-id="@iletisim.ID" data-url="/Iletisim/IletisimSil/">Sil</a></td>
        </tr>
        }
    </tbody>
</table>

