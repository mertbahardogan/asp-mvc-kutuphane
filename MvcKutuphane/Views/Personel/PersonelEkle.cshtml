@model MvcKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<form class="form-group was-validated" method="post">
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.PERSONEL)
            @Html.TextBoxFor(m => m.PERSONEL, new { @class = "form-control", placeholder = "Personel Adı" ,@required="required"})
            @Html.ValidationMessageFor(m=>m.PERSONEL)
        </div>
        <div>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>

</form>

